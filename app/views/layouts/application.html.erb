<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'fairbnb_logo.png' %>
    <title>FairBnb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'https://www.authy.com/form.authy.min.css' %>
    <%= stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Khula' %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag  '//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js' %>
    <%= javascript_include_tag "https://www.authy.com/form.authy.min.js" %>
  </head>

  <body>

    <%= render partial: 'layouts/navbar' %>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>
    </div>

    <%= yield :top_content %>

    <div class="container">
        <h1><%= yield :header %></h1>
      <%= yield %>
    </div>

  </body>
  <%= yield :foot %>
</html>
