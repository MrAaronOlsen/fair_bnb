<div class="container">
    <div class="search_bar">
      <div class="form-inline">
      <div class="input-group">
          <%= form_tag("/properties", :method => "get") do %>
          <div class="form-group">
            <%= text_field_tag(:place_search, nil, placeholder: 'location') %>
          </div> &nbsp;
          <div class="form-group">
            <%= date_field_tag :check_in %>
          </div> &nbsp;
          <div class="form-group">
            <%= label_tag(:check_out, " til ") %>&nbsp;
            <%= date_field_tag :check_out %>
          </div> &nbsp;
          <div class="form-group">
            <%= text_field_tag(:guests, nil, placeholder: 'guests')%>
          </div> <br>
          <div class="form-group">
            <br>
            <%= submit_tag "Search", name: nil, class: "btn btn-custom", id: 'search-button' %>
          </div>
          <% end %>
      </div>
    </div>
    </div>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_MAP_KEY']%>&libraries=places&callback=placeSearch" async defer></script>
  </div>
  <br><br>
