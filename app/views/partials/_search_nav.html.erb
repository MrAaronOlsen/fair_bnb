<div class="nav-search">
  <%= form_tag("/properties", :method => "get") do %>
    <div class="form-group">
      <%= text_field_tag(:place_search, nil, placeholder: 'location') %>
    </div>
    <div class="form-group">
      <%= text_field_tag :date_range %>
    </div>
    <div class="form-group">
      <%= text_field_tag(:guests, nil, placeholder: 'guests')%>
    </div>
    <div class="form-group">
      <%= submit_tag "Search", name: nil, class: "btn btn-custom", id: 'search-button' %>
    </div>
  <% end %>
</div>