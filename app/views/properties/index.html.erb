<%= render partial: 'partials/search' %>

<h3>Search Results</h3>

<%= render partial: 'index_map' %>

<% if @presenter.properties.empty? %>
  There were no properties that matched your search criteria!
<% else %>
  <h3><%="Properties avaialable between #{@presenter.check_in} and #{@presenter.check_out}" if @presenter.check_in && @presenter.check_out %></h3>
  <h4><%="Properties with #{@presenter.number_of_guests} or more guests allowed" if @presenter.number_of_guests%></h4>
  <div class="results">
  <% @presenter.cities.each do |city| %>
    <h3>Properties in <%= city %></h3>
      <% @presenter.properties.each do |property| %>
        <% if property.city == city %>
          <h4><%= link_to property.name, property_path(property) %></h4>
          <%= link_to image_tag(property.image_url, width: 500), property_path(property) %><br><br>
        <% end %>
      <% end %>
  <% end %>
  </div>

<% end %>