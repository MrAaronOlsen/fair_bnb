<h1><%= @property.name %></h1>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-6">
      <p>Status: <%= @property.status %></p>
      <p>Price per Night: <%= number_to_currency(@property.price_per_night) %></p>
      <p>Number of:</p>
      <ul>
        <li>Guests: <%= @property.number_of_guests %></li>
        <li>Beds: <%= @property.number_of_beds %></li>
        <li>Rooms: <%= @property.number_of_rooms %></li>
        <li>Bathrooms: <%= @property.number_of_bathrooms %></li>
      </ul>
    </div>
    <div class="col-md-6">
      <h3>Location:</h3>
      <p><%= @property.address %></p>
      <p><%= @property.city %>, <%= @property.state %> <%= @property.zip %></p>
    </div>
  </div>
</div>
<% if @property.reservations.in_progress.count > 0 %>
  <div class="well well-lg" id="in-progress-requests">
    <%= render partial: 'reservations/requests', locals: {status: 'in_progress', property: @property} %>
  </div>
<% end %>
<% if @property.reservations.pending.count > 0 %>
  <div class="panel panel-default" id="pending-requests">
    <div class="panel-heading">
      <h3 class="panel-title">Pending Requests</h3>
    </div>
    <div class="panel-body">
      <%= render partial: 'reservations/requests', locals: {status: 'pending', property: @property} %>
    </div>
  </div>
<% end %>
<div class="panel panel-default" id="confirmed-requests">
  <div class="panel-heading">
    <h3 class="panel-title">Confirmed Requests</h3>
  </div>
  <div class="panel-body">
    <% if @property.reservations.confirmed.count > 0 %>
      <%= render partial: 'reservations/requests', locals: {status: 'confirmed', property: @property} %>
    <% else %>
      <p>No Confirmed Requests</p>
    <% end %>
  </div>
</div>
<div class="panel panel-default" id="finished-requests">
  <div class="panel-heading">
    <h3 class="panel-title">Finished Requests</h3>
  </div>
  <div class="panel-body">
    <% if @property.reservations.finished.count > 0 %>
      <%= render partial: 'reservations/requests', locals: {status: 'finished', property: @property} %>
    <% else %>
      <p>No Finished Requests</p>
    <% end %>
  </div>
</div>
<div class="panel panel-default" id="declined-requests">
  <div class="panel-heading">
    <h3 class="panel-title">Declined Requests</h3>
  </div>
  <div class="panel-body">
    <% if @property.reservations.declined.count > 0 %>
      <%= render partial: 'reservations/requests', locals: {status: 'declined', property: @property} %>
    <% else %>
      <p>No Declined Requests</p>
    <% end %>
  </div>
</div>
